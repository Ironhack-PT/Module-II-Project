<div class="row m-0 mt-3">
    <div class="col-2">
        {{> sidebar}}
    </div>
    <div class="col-10 mt-3">
        <h2 class="text-center mt-4 request" style="color:rgb(10, 207, 207)">YOUR FAVORITE GAMES</h2>
        <div class="col-10 mt-3">
            <div class="row m-0">
                {{#each favorite}}
                <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12 col-xs-12 mt-3">
                    <div class="card card-own-games d-flex align-items-center">
                        <div class="card-body">
                            <div class="text-center">
                                <h3 class="card-title card-name">{{rent.game.title}}</h3>
                            </div>
                            <div class="d-flex justify-content-center">
                                <img src="{{rent.game.image.[0]}}" width="150px" height="150px" class="card-image"></img>
                            </div>
                        </div>
                        <p>Owner: {{rent.tenant.username}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>