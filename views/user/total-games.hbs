<h2 class="text-center pt-2">Other games</h2>
    <div class="row">
        {{#each games as |game|}}
        <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12 col-xs-12 mt-3">
            <div class="card card-other-games d-flex mt-3">
                <div class="card-body">
                    <h3 class="card-title">Name: {{game.title}}</h3>
                    <p class="card-text-desc">Description: {{game.description}}</p>
                    <p class="card-text">Type: {{game.type}}</p>
                    <p class="card-text">State: {{game.state}}</p>
                    <p class="card-text">Price per day: {{game.price}}â‚¬</p>
                      <div class="d-flex justify-content-center">
                    <img src="{{game.image}}" width="150px" height="150px" class="card-image"></img>
                      </div>
                </div>
                <div class="p-3 d-flex justify-content-around">
                    <form action="/game/{{game.id}}/rent" method="GET"> 
                        <button class="delete-game-btn btn btn-danger btn-small">RENT</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>


