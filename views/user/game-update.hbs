<h2>Update Game</h2>

<form action="/profile/{{game.id}}/edit" method="POST" enctype="multipart/form-data">
  <div>
    <label for="title">Title of game</label>
    <input value="{{game.title}}"id="title" type="text" name="title" required />
  </div>
  <div>
    <label for="description">Game description</label>
    <input value="{{game.description}}"id="description" type="text" name="description" required />
  </div>
  <div>
    <label for="price">Price</label>
    <input value="{{game.price}}"id="price" type="number" name="price" required min="0" />
  </div>
  <div>
     <label for="state">State</label>
    <input value="{{game.state}}"id="state" type="text" name="state" required />
  </div>
  <div>
      <label for="image" class="form-label">Insert game img</label>
      <input class="form-control" type="file" name="image" id="image">
    </div>
    <button type="submit" class="btn btn-outline-info bg-light">Submit</button>
</form>