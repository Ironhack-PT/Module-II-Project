<h3 class="text-center pt-2" style="color:rgb(10, 207, 207)">Your own games avalaible to rent</h3>
<div class="row m-0">
  <div class="col-2">
    {{> sidebar}}
  </div>
  <div class="col-10 mt-3">
    <div class="row m-0">
      {{#each games as |game|}}
      <div class="col-xl-3 col-lg-3 col-md-4 col-sm-12 col-xs-12 mt-3">
        <div class="card card-own-games d-flex">
          <div class="card-body">
            <h3 class="card-title">Name: {{game.title}}</h3>
            <p class="card-text-desc">Description: {{game.description}}</p>
            <p class="card-text">Type: {{game.type}}</p>
            <p class="card-text">State: {{game.state}}</p>
            <p class="card-text">Price per day: {{game.price}}â‚¬</p>
            <div id="{{game.title}}" class="carousel slide">
              <div class="carousel-indicators">
                {{#each game.image as |img|}}
                <button type="button" data-bs-target="#{{game.title}}" data-bs-slide-to="{{@index}}"
                  class="active" aria-current="true" aria-label="Slide 1"></button>
                {{/each}}
              </div>
              <div class="carousel-inner">
                {{#each game.image as |img|}}
                {{#if @first}}
                <div class="carousel-item active">
                  <img src="{{img}}" width="150px" height="150px" class="d-block" alt="...">
                </div>
                {{else}}
                <div class="carousel-item">
                  <img src="{{img}}"  width="150px" height="150px" class="d-block" alt="...">
                </div>
                {{/if}}
                {{/each}}
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#{{game.title}}"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#{{game.title}}"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
          <div class="d-flex justify-content-around mb-2">
            <form action="/profile/{{game.id}}/delete" method="POST">
              <button class="delete-game-btn btn btn-danger btn-small">Delete</button>
            </form>
            <form action="/profile/{{game.id}}/edit" method="GET">
              <button class="update-game-btn btn btn-primary btn-smaill">Update</button>
            </form>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>