<div class="login">
<div class="row justify-content-center mt-5">
  <div class="col-4" style="background-color:white">
    <h2 class="text-center">Log in and start renting</h2>
    <form class="mt-4" method="POST" action="/login">
      <div class="form-group mb-3">
        <label for="email">Email</label>
        <input
          id="email"
          value="{{user.email}}"
          name="email"
          type="email"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          placeholder="Email"
        >
      </div>
      <div class="form-group mb-3">
        <label for="password">Password</label>
        <input
          id="password"
          name="password"
          type="password"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          placeholder="********"
        >
      </div>
      {{#if errors.email}}
        <div class="text-danger text-small mb-2">
          {{errors.email}}
        </div>
      {{/if}}
      <button type="submit" class="btn btn-info">Log in</button>
    </form>
  </div>
</div>
</div>

